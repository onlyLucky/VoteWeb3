		"autoscan": true,
		"custom": {
			// nutui 规则如下配置 https://nutui-uniapp.pages.dev/guide/quick-start.html
			"^nut-(.*)?-(.*)": "nutui-uniapp/components/$1$2/$1$2.vue",
			"^nut-(.*)": "nutui-uniapp/components/$1/$1.vue"
		}
	},
